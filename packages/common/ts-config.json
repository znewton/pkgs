{
    "compilerOptions": {
        "target": "es2017",
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "sourceMap": true,
        "inlineSources": true,
        "noImplicitAny": false,
        "incremental": true,
        "types": ["node","mocha"],
        "strict": true,
        "pretty": true,
        "lib": [ "ES2020" ]
    }
}